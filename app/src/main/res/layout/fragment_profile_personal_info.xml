<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sección de "Completa tu perfil" -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCompleteProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completa tu perfil"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvProfileProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 de 4 completado"/>
                <ProgressBar
                    android:id="@+id/progressBarProfile"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tvEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar datos personales"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de "Verifica tu perfil" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifica tu perfil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:id="@+id/itemVerifyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">
            <ImageView
                android:id="@+id/ivVerifyEmailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Confirmar correo electrónico"/>
        </LinearLayout>
        <!-- Aquí irán los otros items de verificación -->
    </LinearLayout>
</ScrollView>