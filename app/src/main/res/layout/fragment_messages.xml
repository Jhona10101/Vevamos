<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MessagesFragment">

    <!--
        SOLUCIÓN 1: El RecyclerView para mostrar la lista de mensajes.
        El ID "rv_messages" se convierte en "binding.rvMessages" en tu código Kotlin.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_message" /> <!-- 'item_message' es un ejemplo del layout de cada fila -->

    <!--
        SOLUCIÓN 2: El TextView para mostrar cuando no hay mensajes.
        El ID "tv_no_messages" se convierte en "binding.tvNoMessages" en tu código Kotlin.
    -->
    <TextView
        android:id="@+id/tv_no_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aún no tienes mensajes"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>